[
    {{ if le 0 (semver_compare (datastore "settings.version") "v6.0.0") }}
        {{ $accessToken := oauth2_password_token "web-client" "root" "admin" | marshal | qjson "access_token" | unmarshal }}
        {
            "name": "GET /session for \"root\"",
            "request": {
                "endpoint": "user/session",
                "method": "GET",
                "header":{
                    "Authorization": "Bearer {{ $accessToken }}"
                }
            },
            "store_response_qjson": {
                "rootUserID": "body.user.user._id",
                "rootUserVersion": "body.user.user._version",
                "maxEventID": "body.current_max_event_id"
            },
            "store": {
                "root-token": "Bearer {{ $accessToken }}",
                "token_root": "Bearer {{ $accessToken }}"
            },
            "delay_ms": 500,
            "timeout_ms": 10000
        }
    {{ else }}
        {
            "name": "Get session",
            "request": {
                "endpoint": "session",
                "method": "GET",
                "header": {
                    "x-easydb-token": ""
                }
            },
            "response": {
                "statuscode": 200
            },
            "store_response_qjson": {
                "xEasyToken": "body.token"
            }
        },
        {
            "name": "Login as root",
            "request": {
                "endpoint": "session/authenticate",
                "method": "POST",
                "query_params": {
                    "method": "easydb",
                    "login": "root",
                    "password": "admin"
                },
                "header_from_store": {
                    "x-easydb-token": "xEasyToken"
                }
            },
            "response": {
                "statuscode": 200
            },
            "store_response_qjson": {
                "maxEventID": "body.current_max_event_id"
            }
        }
    {{ end }}
]